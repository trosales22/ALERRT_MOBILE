<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="56dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblAgencyCaption"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Sample Agency"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblAgencyFullname"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="10dp"
        android:text="Sample Fullname"
        android:layout_below="@id/lblAgencyCaption"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblAgencyPosition"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_work"
        android:drawablePadding="10dp"
        android:text="Sample Position"
        android:layout_below="@id/lblAgencyFullname"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblAgencyContactNumber"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="10dp"
        android:text="Sample Contact Number"
        android:layout_below="@id/lblAgencyPosition"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnReportNow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_arrow_forward_black"
        android:text="Report Now!"
        android:textSize="16dp"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimaryDark"/>

</LinearLayout>